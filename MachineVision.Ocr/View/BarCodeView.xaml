<UserControl
    x:Class="MachineVision.Ocr.View.BarCodeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MachineVision.Shared.Controls;assembly=MachineVision.Shared"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MachineVision.Ocr.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Margin="5">
            <TextBlock
                FontSize="25"
                FontWeight="Bold"
                Text="BarMatch" />
        </StackPanel>

        <Grid Grid.Row="1" Cursor="">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.7*" />
                <ColumnDefinition Width="0.3*" />
            </Grid.ColumnDefinitions>

            <TabControl
                Grid.Column="1"
                Margin="6,5,6,0"
                Cursor="">

                <TabItem Header="基本参数">

                    <StackPanel>
                        <Button
                            Margin="5,10"
                            Command="{Binding LoadImageCommand}"
                            Content="加载图片" />

                        <Button
                            Margin="5,10"
                            VerticalAlignment="Bottom"
                            Command="{Binding RunCommand}"
                            Content="开始" />
                        <Button
                            Margin="5,10"
                            Command="{Binding ClearCommand}"
                            Content="清除" />

                    </StackPanel>








                </TabItem>

            </TabControl>
            <!--  画面显示  -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <controls:ImageEditView
                    x:Name="MyImageEditView"
                    Grid.Row="0"
                    Image="{Binding Image}" />
                <!--  结果显示  -->
                <Grid Grid.Row="1">
                    <TextBlock Grid.Row="1" Text="{Binding Result}" />
                </Grid>


            </Grid>
        </Grid>
    </Grid>
</UserControl>
