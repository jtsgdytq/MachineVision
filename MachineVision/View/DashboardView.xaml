<UserControl
    x:Class="MachineVision.View.DashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:MachineVision.Service"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MachineVision.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodel="clr-namespace:MachineVision.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:StringToEnumConverter x:Key="IconEnumConverter" />
    </UserControl.Resources>


    <Grid>
        <ItemsControl ItemsSource="{Binding navigationMenuService.Items[0].Items}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Background="Transparent">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Margin="10"
                            FontSize="16"
                            FontWeight="Bold"
                            Text="{Binding Name}" />
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding Items}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <md:Card
                                        Width="120"
                                        Height="120"
                                        Margin="5"
                                        Background="Transparent">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition Height="Auto" />

                                            </Grid.RowDefinitions>

                                            <md:PackIcon
                                                Grid.Row="0"
                                                Width="64"
                                                Height="64"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Kind="{Binding Icon, Converter={StaticResource IconEnumConverter}}" />
                                            <TextBlock
                                                Grid.Row="1"
                                                Margin="5"
                                                HorizontalAlignment="Center"
                                                FontSize="14"
                                                Text="{Binding Name}" />


                                        </Grid>
                                    </md:Card>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>


        </ItemsControl>
    </Grid>
</UserControl>
